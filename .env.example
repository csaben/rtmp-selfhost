# RTMP Self-Host Server Configuration
# Copy this file to .env and update the values for your deployment

# Server IP address - auto-detect or set manually
# If AUTO_DETECT_IP=true, this will be overridden with auto-detected IP
SERVER_IP=192.168.1.100

# Port configurations
RTMP_PORT=1935
HTTP_API_PORT=8000
WEB_PORT=8080

# Stream configuration
DEFAULT_STREAM_KEY=blueiris_cam1

# Set to true to auto-detect local IP, false to use SERVER_IP above
# Recommended: true for local deployments, false for containers/cloud
AUTO_DETECT_IP=true